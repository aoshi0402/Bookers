<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div>
    <h2><%= @book.errors.count %>件のerrorが発生しました</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %> 
	<br>
  <%= f.submit 'Update Book' %>    
<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
